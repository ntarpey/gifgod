<li id="<%= feed_item.id %>">

	<%= link_to gravatar_for(feed_item.user), feed_item.user %>
	<span class="user">
		<%= link_to feed_item.user.name, feed_item.user %>
	</span> - 

	<%-# Below is timestamp, below that is content to be posted above is user name -%>

	<span class="timestamp">
		 <%= time_ago_in_words(feed_item.created_at) %> ago.
	</span>

	<br>

	<a href="<%= feed_item.content %>">Link to Source</a>
	<span class="content">
		<img src="<%= feed_item.content %>"; max-height="250px"; max-width="500px";/>
	</span>

	<% if current_user?(feed_item.user) %>
		<%= link_to "delete", feed_item, method: :delete, data: { confirm: "Are you sure? "}, title: feed_item.content %>
	<% end %>
</li>